            "required": true,
            "in": "query",
            "description": "Имя пользователя",
            "schema": {
              "type": "string",
              "example": "Alexander"
            }
          },
          {
            "name": "password",
            "required": true,
            "in": "query",
            "description": "Пароль пользователя",
            "schema": {
              "type": "string",
              "example": "123456qwerty"
            }
          }
        ]
      }
    },
