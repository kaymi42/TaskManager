              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "title": "Идентификатор пользователя",
                      "nullable": false,
                      "example": "1"
                    },
                    "username": {
                      "type": "string",
                      "title": "Имя пользователя",
                      "nullable": false,
                      "example": "Alexander"
                    },
                    "email": {
                      "type": "string",
